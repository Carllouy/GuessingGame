import random

def display_Heading():
    print("=====================================")
    print("  Guess The Number")
    print("=====================================")

def play_Game(limit):
    number_to_guess = random.randint(1, limit)
    print(f"\nI'm thinking of a number between 1 and {limit}.")

    while True:
        try:
            guess = int(input("Take a guess: "))
            if guess < number_to_guess:
                print("Too low. Try again.")
            elif guess > number_to_guess:
                print("Too high. Try again.")
            else:
                print("ğŸ‰ You guessed correctly!")
                break
        except ValueError:
            print("Please enter a valid number.")

def main():
    display_Heading()

    while True:
        # Ask for upper limit or allow exit
        while True:
            limit_input = input("Enter the highest number for your guessing range (or type 'exit' to quit): ").strip().lower()
            if limit_input in ['exit', 'quit']:
                print("ğŸ‘‹ Goodbye!")
                return
            try:
                limit = int(limit_input)
                if limit < 1:
                    print("Enter a number greater than 0.")
                else:
                    break
            except ValueError:
                print("Enter a valid number.")

        play_Game(limit)

        # Ask if the player wants to play again
        while True:
            play_again = input("Play again? (yes/no): ").strip().lower()
            if play_again in ['yes', 'y']:
                print("\nğŸ” Starting a new game...\n")
                break
            elif play_again in ['no', 'n']:
                print("ğŸ‘‹ Thanks for playing! Goodbye.")
                return
            else:
                print("Please enter 'yes' or 'no'.")

if __name__ == "__main__":
    main()
